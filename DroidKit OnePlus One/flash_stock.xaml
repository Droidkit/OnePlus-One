<Controls:MetroWindow x:Class="DroidKit_OnePlus_One.flash_stock"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        Title="Flash to Stock" Height="241" Width="190" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontFamily="Roboto" Icon="resources/Droidkiticon.ico">
    <Grid>
        <Label Content="1. Select Memory Size" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <RadioButton x:Name="GB16" Content="16 Gb" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="GB64" Content="64 Gb" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"/>
        <Label  Content="2. Flash Firmware" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-13,0,0"/>
        <Button x:Name="flash" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Flash" Margin="0,53,0,0" Click="Button_Click"/>
        <ProgressBar x:Name="bar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="150" Margin="17,0,17,20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}"/>
    </Grid>
</Controls:MetroWindow>
